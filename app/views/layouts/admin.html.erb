                </a>
              </li>
              <li>
                <a href="<%= orders_path %>">
                  <span class="menu-icon">
                    <i class="fa fa-cart-arrow-down"></i> 
                  </span>
                  <span class="text">
                    Orders
                  </span>
                  <span class="menu-hover"></span>
                </a>
              </li>
              <li>
                <a href="<%= builders_path %>">
                  <span class="menu-icon">
                    <i class="fa fa-building"></i> 
                  </span>
                  <span class="text">
                    Builders
                  </span>
                  <span class="menu-hover"></span>
                </a>
              </li>
              <li>
                <a href="<%= designs_path %>">
                  <span class="menu-icon">
                    <i class="fa fa-desktop"></i> 
                  </span>
                  <span class="text">
                    Master Design
                  </span>
                  <span class="menu-hover"></span>
                </a>
              </li>
            </ul>
          </div>
        </div><!-- /sidebar-inner -->
      </aside>

      <div id="main-container">
        <div id="top-nav">
          
        </div>
        
        <%= yield %>

