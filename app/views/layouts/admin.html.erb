  <link href='https://api.mapbox.com/mapbox.js/v2.2.1/mapbox.css' rel='stylesheet' />
  <%= stylesheet_link_tag :admin, media: "all" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= body_class %>">
  <div id="wrapper" class="preload">
      <aside id="sidebar">
        <div class="sidebar-inner">
          <div class="main-menu">
            <ul>
              <li class="active">
