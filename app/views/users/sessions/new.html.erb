<div class="box white">
	<div style="text-align:center">
		<h3><a href="<%= root_url %>"><%= image_tag 'logo_big.jpg', style: 'max-height: 52px;margin-bottom: 12px;padding:0px' %></a></h3>
		<h3 style="color:rgb(59, 149, 185)">LOGIN</h3>
		<hr>
	</div>
	<%= render 'application/flashes' %>
	<%= simple_form_for(resource, as: resource_name, url: user_session_path) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :email, required: false, autofocus: true %>
	    <%= f.input :password, required: false %>
	    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Log in" %>
	  </div>
	  <%= render "devise/shared/links" %>
	<% end %>
</div>