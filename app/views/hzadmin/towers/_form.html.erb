<%= simple_form_for @tower, url: builder_apartment_towers_path do |f| %>
	<%= f.input :apartment_id, as: :hidden, input_html: { value: params[:apartment_id]} %>
	<%= f.input :builder_id, as: :hidden, input_html: { value: params[:builder_id]} %>
	<%= f.input :name %>
	<br>
	<%= f.submit %>
<% end %>
