<div class="main-header">
    <div class="align">
    	<div class="page-title">
    	    <h3>Builders</h3>
    	    <span></span>
    	</div><!-- /page-title -->
    	
    	<ul class="page-stats">
    	    <button>New Builder</button>
    	</ul><!-- /page-stats -->
    </div>
</div>

<div class="padding-md">
  <table>
  	<tr>
  		<th>Name</th>
  		<th>Email</th>
  		<th>Contact</th>
  		<th>Description</th>
  		<th></th>
  	</tr>
    <% @builders.each do |b| %>
      <tr>
        <td><%= b.name %></td>
        <td><a href="mailto:"><%= b.email %></a></td>
        <td><a href="tel:<%= b.contact %>"><%= b.contact %></a></td>
        <td><%= b.description %></td>
        <td>
          <a href="<%= edit_builder_path(b.id) %>"><i class='fa fa-pencil-square-o'></i> Edit</a> &nbsp; 
          <%= link_to builder_path(b.id), method: :delete do %>
            <i class='fa fa-trash-o'></i> Remove
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>