<style>
	img{
		width: inherit !important;
	}
	.custom_design_form{
		width: 63%;
		margin: 10px auto;
		background: aliceblue;
		padding: 55px;
		border: 1px solid #e3e3e3;
		border-radius: 4px;
	}
</style>
<div class="container padder">
	<div class="custom_design_form">
	<h2 style="text-align:center;margin-bottom:60px">Request Custom Design</h2>
		<%= simple_form_for @order, url: custom_design_path do |o| %>
			<%= o.input :order_type, as: :hidden, input_html: { value: 'Custom'} %>
			<%= o.input :name, required: true %>
			<%= o.input :email, required: true %>
			<%= o.input :mobile %>
			<%= o.input :flat %>
			<%= o.input :apartment_address %>
			<%= o.input :city %>
			<%= o.input :special_request %>

			<%= o.submit 'Submit Request'  %>
		<% end %>
	</div>
</div>